@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUsers> SignInManager
@inject UserManager<AppUsers> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link" asp-controller="ShoppingCart" asp-action="Index">
                <i class="bi bi-cart-fill"></i>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index"><i class="bi bi-person-fill-gear"> @User.Identity.Name</i></a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" asp-area="Identity" asp-page="/Account/Logout" method="post" class="form-inline">
                <button type="submit" class="nav-link btn">Wyloguj</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Zaloguj</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Zarejestruj</a>
        </li>
    }
</ul>